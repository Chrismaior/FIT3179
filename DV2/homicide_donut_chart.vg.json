{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "width": 420,
  "height": 320,

  "data": {
    "values": [
      {"Region": "Europe",   "Value": 7898},
      {"Region": "Africa",   "Value": 41507},
      {"Region": "Americas", "Value": 147594},
      {"Region": "Asia",     "Value": 30053},
      {"Region": "Oceania",  "Value": 389}
    ]
  },

  "transform": [
    {"joinaggregate": [{"op": "sum", "field": "Value", "as": "Total"}]},
    {"calculate": "datum.Value / datum.Total", "as": "Percent"},
    {"calculate": "format(datum.Percent, '.1%')", "as": "PercentLabel"}
  ],

  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 110, "stroke": null},
      "encoding": {
        "theta": {"field": "Value", "type": "quantitative", "stack": true},
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {"range": ["#d73027", "#fc8d59", "#fee090", "#91bfdb", "#4575b4"]},
          "legend": {
            "title": "",
            "orient": "bottom",
            "direction": "horizontal",
            "labelColor": "white",
            "labelFontSize": 14,
            "symbolSize": 260,
            "padding": 25 
          }
        },
        "tooltip": [
          {"field": "Region", "type": "nominal"},
          {"field": "Value", "type": "quantitative", "title": "Offences", "format": ",d"},
          {"field": "Percent", "type": "quantitative", "title": "Share", "format": ".1%"}
        ]
      }
    },


    {
      "mark": {
        "type": "text",
        "fill": "white",
        "fontSize": 16,
        "radius": {"expr": "min(width, height)/2"},
        "radiusOffset": 25,                          
        "stroke": "white",
        "strokeWidth": 0.25
      },
      "encoding": {
        "theta": {"field": "Value", "type": "quantitative", "stack": true},
        "text": {"field": "PercentLabel"}
      }
    },


    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 16,
        "fill": "white",
        "lineBreak": "\n"                            
      },
      "encoding": {
        "text": {"value": "Intentional Homicide Related\nCrimes by Region, 2023"}
      }
    }
  ],

  "config": {
    "view": {"stroke": null}
  }
}
